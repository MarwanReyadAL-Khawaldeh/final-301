<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <link rel="stylesheet" href="../../css/reset.css">
<link rel="stylesheet" href="../../css/base.css">
<link rel="stylesheet" href="../../css/layout.css">
    <title>Page Title</title>
</head>
<body>
    <header>
        <nav>
            <a href="/">Home </a>
            <a href="/maybellineProducts">All Product </a>
            <a href="/addProduct">My Product </a>
        </nav>

    </header>
    <main>
        <div class="card">
            <div class="myCard">
                <% data.forEach(val =>{%>

                    <h2><%= val.name%></h2>
                    <img src="<%= val.img%>" alt="">
                    <h3><%= val.price%></h3>
                    <h3><%= val.description%></h3>

                    <form action="/addProduct" method="POST">
                        <input type="hidden" name="name"value="<%= val.name%>">
                        <input type="hidden" name="img"value="<%= val.img%>">
                        <input type="hidden" name="price"value="<%= val.price%>">
                        <input type="hidden" name="description"value="<%= val.description%>">
                        <button >Add to card</button>
                    </form>

               <% }) %>
            </div>
        </div>
    </main>
    <footer>
        <h3>
            All Rights Reserved 2021 &#174
        </h3>
    </footer>
    
</body>
</html>